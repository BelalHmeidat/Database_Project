<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="399.0" prefWidth="500.0" spacing="10.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.databaseproject.database_project.UIController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <HBox alignment="CENTER" prefHeight="40.0" prefWidth="460.0" spacing="20.0">
         <children>
            <Label text="Passenger Name" />
            <TextField />
            <Separator orientation="VERTICAL" prefHeight="200.0" />
            <Label text="#" />
            <Spinner maxWidth="70.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER" fillHeight="false" prefHeight="40.0" prefWidth="460.0" spacing="30.0">
         <children>
            <Label text="Phone Number" />
            <TextField />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="40.0" prefWidth="460.0" spacing="30.0">
         <children>
            <Label text="Select Route:" />
            <MenuButton mnemonicParsing="false" text="Routes">
              <items>
                <MenuItem mnemonicParsing="false" text="Action 1" />
                <MenuItem mnemonicParsing="false" text="Action 2" />
              </items>
            </MenuButton>
            <Separator orientation="VERTICAL" prefHeight="200.0" />
            <Label text="Cost" />
            <TextField prefWidth="70.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="40.0" prefWidth="460.0" spacing="30.0">
         <children>
            <Label text="Select Time" />
            <DatePicker />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="40.0" prefWidth="460.0" spacing="30.0">
         <children>
            <Label text="Select Driver:" />
            <MenuButton mnemonicParsing="false" text="Drivers">
               <items>
                  <MenuItem mnemonicParsing="false" text="Action 1" />
                  <MenuItem mnemonicParsing="false" text="Action 2" />
               </items>
            </MenuButton>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="40.0" prefWidth="460.0" spacing="30.0">
         <children>
            <Label text="Estimated Arrival:" />
            <Label text=":" />
         </children>
      </HBox>
      <ButtonBar prefHeight="40.0" prefWidth="500.0">
        <buttons>
          <Button cancelButton="true" mnemonicParsing="false" text="Cancel" textFill="#dd1d1d" translateX="-160.0" />
            <Button defaultButton="true" mnemonicParsing="false" text="Confirm" translateX="-140.0" />
        </buttons>
      </ButtonBar>
   </children>
</VBox>
